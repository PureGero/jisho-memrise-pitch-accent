{
  "manifest_version": 2,

  "name": "Jisho-OJAD",
  "description": "Add pitch accent display to Jisho",
  "version": "1.0",

  "background": {
    "scripts": ["WaDokuDa.js", "background.js"]
  },

  "content_scripts": [
    { "matches": [ "*://jisho.org/search/*", "*://www.jisho.org/search/*",
                   "*://jisho.org/word/*", "*://www.jisho.org/word/*" ],
      "js": ["jquery.js", "content.js"],
      "css": ["content.css"]
    }
  ],

  "permissions": [
    "nativeMessaging"
  ]
}
